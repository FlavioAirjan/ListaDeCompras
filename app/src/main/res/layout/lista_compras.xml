<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.listadecompras.listadecompras.ListActivity"
    android:id = "@+id/container"
    android:background="@mipmap/ic_paper">

    <TextView android:id="@+id/list_item_number"
        android:layout_width="60dp"
        android:layout_height="75dip"
        android:gravity="left|center"
        android:textSize="26sp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/list_restam">
    </TextView>

    <TextView android:id="@+id/list_restam"
        android:layout_width="80dp"
        android:layout_height="75dip"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Restam: "
        android:layout_marginLeft="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </TextView>


    <ListView
        android:id="@+id/list_itens"
        android:layout_width="wrap_content"
        android:layout_height="366dp"
        android:layout_marginLeft="0dp"
        android:layout_gravity="right|center_vertical"
        android:layout_above="@+id/add_item_button"
        android:layout_below="@+id/menu_inicial"></ListView>

    <Button
        android:id="@+id/add_item_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@mipmap/ic_add"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </Button>

    <Button
        android:id="@+id/menu_inicial"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@mipmap/ic_backbutton"
        android:layout_gravity="left|top"
        android:layout_marginLeft="0dp"
        android:textAlignment="inherit"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </Button>

    <EditText android:id="@+id/list_text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:gravity="center"
        android:textSize="36sp"
        android:layout_marginLeft="0dp"
        android:layout_gravity="right|top"
        android:layout_above="@+id/list_itens"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:inputType="textPersonName"
        android:background="@android:color/transparent">
    </EditText>

    <ImageView android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagecart"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_cart2"
        android:scaleX="-1"
        android:layout_alignParentEnd="true"></ImageView>


</RelativeLayout>